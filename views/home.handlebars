<h1>Welcome to the Tech Blog</h1>

{{#if posts}}
    <section>
        {{#each posts as |post|}}
            <article>
                <h2>{{post.title}}</h2>
                <p>{{truncateText post.content 200}}</p>
                <p>Posted on {{formatDate post.createdAt}} by {{post.author}}</p>
                <a href="/posts/{{post.id}}">Read more</a>
            </article>
        {{/each}}
    </section>
{{else}}
    <p>No posts to display. Be the first to create a post!</p>
{{/if}}
